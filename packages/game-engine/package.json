{
  "name": "@speedai/game-engine",
  "version": "0.1.0",
  "description": "Zero-dependency game engine with ECS architecture and swappable backends",
  "type": "module",
  "main": "dist/game-engine.cjs.js",
  "module": "dist/game-engine.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/game-engine.es.js",
      "require": "./dist/game-engine.cjs.js",
      "types": "./dist/index.d.ts"
    },
    "./core": "./dist/core/index.js",
    "./physics/matter": "./dist/adapters/physics/MatterAdapter.js",
    "./sound/howler": "./dist/adapters/sound/HowlerAdapter.js"
  },
  "sideEffects": false,
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "matter-js": ">=0.19.0",
    "howler": ">=2.2.0"
  },
  "peerDependenciesMeta": {
    "matter-js": { "optional": true },
    "howler": { "optional": true }
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "vite": "^5.4.0",
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0"
  },
  "files": ["dist"],
  "license": "MIT"
}
